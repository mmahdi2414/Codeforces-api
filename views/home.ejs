<%- include('header') -%>
    <% if (error){ %>
        <div class="alert alert-danger">
            <strong>Error!</strong>
            <%= error %>
        </div>
    <% } %>
    <form action="/search">
        <div class="input-group">
            <input name="handle" type="text" class="form-control" placeholder="Search">
            <div class="input-group-btn">
                <button class="btn btn-default" type="submit">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </div>
        </div>
    </form>
<%- include('footer') -%>
